<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="crtsistemasmobile.com.br.crtsistemasmobile.controller.AcessoActivity"
    android:id="@+id/layoutAcesso1"
    android:background="@drawable/telalogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="50dp"/>
    <TextView
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:lines="1"
        android:textSize="25dp"
        android:text="MASTER"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="50dp"/>
    <EditText
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:background="#FFFFFFFF"
        android:textColor="#000000"
        android:textSize="40dp"
        android:lines="1"
        android:inputType="textPassword"
        android:id="@+id/edtAcesso"/>
    <Button
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/acessar"
        android:id="@+id/btnAcesso"
       />

</LinearLayout>
